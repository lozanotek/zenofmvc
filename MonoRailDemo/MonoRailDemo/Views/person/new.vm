<h3>New Person</h3>
<hr />
#if($Flash.error)
<p style="color: red; font-weight: bold;">
    $Flash.error
</p>
#end

<div id ="menu">
    <ul>
        <li><a href="/person/index.rails">&lt;&lt; Return to list</a></li>
    </ul>
</div>

<form action="create.rails" method="post">
    <p>
        <label>First Name: $FormHelper.TextField("person.firstname")</label>
    </p>

    <p>
        <label>Last Name: $FormHelper.TextField("person.lastname")</label>
    </p>

    <p>
        <label>Birth Date: $FormHelper.TextFieldFormat("person.birthdate", "MM/dd/yyyy")</label>
    </p>
    <p><input type="submit" value="Create" /></p>
</form>
